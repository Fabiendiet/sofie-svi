;exten => s_aucune_saisie-cpt,n,noop(VALEUR_SAISIE_1=${VALEUR_SAISIE_1})
;exten => s_aucune_saisie-cpt,n,gotoif($["${LEN(${VALEUR_SAISIE_1})}" = "0"]?s,33:$[${PRIORITY}+1])
