exten => s,n,gotoif($["${LEN(${LECTURE})}" = "0"]?AUCUNE_SAISIE:$[${PRIORITY}+1])
exten => s,n,gotoif($["${LECTURE}" = "*"]?SAISIE_ETOILE:$[${PRIORITY}+1])
exten => s,n,set(I=0)
